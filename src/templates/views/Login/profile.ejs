    }
    function copy() {
        console.log("HEloo")
        var copyText = document.getElementById("copy-btn").innerText;
        console.log(copyText)
        navigator.clipboard.writeText(copyText);
    }
</script>

<body>
    <div class="navbar-div">
        <nav class="navbar">
            <input type="checkbox" id="check">
            <label for="check" class="checkbtn">&#9776;</label>
            <label for="#" class="logo"><a href="index" class="goldgym">ConfessOut</a></label>
            <ul class="nav-ul">
                <li><a href="login" class="active">Profile</a></li>
                <li><a href="settings">Settings</a></li>
                <li><a href="logout" id="join-now">Log Out</a></li>
            </ul>
        </nav>
    </div>
    <div class="profile">
        <h3>Hey, <%=name%>
        </h3>
        <p>Here is your public link:
        <form action="/user" method="post">
            <button type="submit" style="background: none;color: red;display: inline;">
                <p id="copy-btn">
                    https://www.confessout.com/<%=username%>
                </p>
            </button>
        </form>
        <div class="cop-div">
            Copy
                <img src="../images/copy.png" alt="" id="copy-img" onclick="copy()">
        </div>
        </p>
        <h5>Share your link</h5>
        <div class="share">
            <div class="share-fb">
                <a href="">
                    <i class="fa fa-facebook icon" style="font-size: 20px"></i>
                    Share on Facebook
                </a>
            </div>
            <div class="share-insta">
                <a href="">
                    <i class="fa fa-instagram icon" style="font-size: 20px"></i>
                    Share on Facebook
                </a>
            </div>
            <div class="share-whatsapp">
                <a href="">
                    <i class="fa fa-whatsapp icon" style="font-size: 20px"></i>
                    Share on Facebook
                </a>
            </div>
        </div>
    </div>
    <div class="data">
        <div class="viewmsg">
            <div class="msgimg">
                <img src="../images/recieve.png" alt="send">
            </div>
            <div class="msgrecieve" onclick="show()" style="cursor: pointer;">
                View Recieved
            </div>
        </div>
        <div class="viewmsg">
            <div class="msgimg">
                <img src="../images/send.png" alt="send">
            </div>
            <div class="msgrecieve" style="cursor: pointer;" onclick="sentmsg()">
                View Sent
            </div>
        </div>
    </div>
    </div>
    <br><br>
    <div id="showmsg"
        style="background-color: #edebeb;padding:20px 20px 20px 40px;width: 80%;margin: 0 auto;display: none;">
        <p style="font-weight: bold;">Messages Recieved by You</p>
        <br>
        <% if(msg.length==0) {%>
            <p>No messages to display</p>
            <% } %>
                <ul>
                    <% for(let i=0;i<msg.length;i++) { %>
                        <li>
                            <%=msg[i]%>
                        </li>
                        <% } %>
                </ul>
